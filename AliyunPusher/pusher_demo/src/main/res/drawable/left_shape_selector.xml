<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="5dp" android:bottomLeftRadius="5dp" />
            <solid android:color="@color/colorPrimary_alpha_five" />
            <stroke android:width="1px" android:color="@color/colorPrimary" />
        </shape>
    </item>
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="5dp" android:bottomLeftRadius="5dp" />
            <solid android:color="@color/alivc_color_pusher_colorAccent" />
            <stroke android:width="1px"
                android:color="@color/alivc_color_pusher_colorAccent" />
        </shape>
    </item>

</selector>